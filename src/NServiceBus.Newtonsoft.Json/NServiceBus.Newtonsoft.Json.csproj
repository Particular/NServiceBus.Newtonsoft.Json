<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp2.1</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <Description>Json.NET serializer for NServiceBus</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="[13.0.1, 14.0.0)" />
    <PackageReference Include="NServiceBus" Version="[8.0.0-alpha.1897, 9.0.0)" />
    <PackageReference Include="Particular.Packaging" Version="1.2.1" PrivateAssets="All" />
  </ItemGroup>

</Project>
